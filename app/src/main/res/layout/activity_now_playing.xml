<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/sixteen_dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_hundred_twenty_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:src="@drawable/musicicon" />

        <TextView
            android:id="@+id/now_playing_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_hundred_fifty_dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textSize="@dimen/twenty_four_sp"
            />

        <TextView
            android:id="@+id/now_playing_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="monospace"
            android:textSize="@dimen/twenty_four_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/zero_dp"
                android:layout_height="@dimen/Fourty_eight_dp"
                android:layout_weight="1"
                android:src="@drawable/skip_previous" />

            <ImageView
                android:layout_width="@dimen/zero_dp"
                android:layout_height="@dimen/Fourty_eight_dp"
                android:layout_weight="1"
                android:src="@drawable/pause_circle_filled_" />

            <ImageView
                android:layout_width="@dimen/zero_dp"
                android:layout_height="@dimen/Fourty_eight_dp"
                android:layout_weight="1"
                android:src="@drawable/skip_next_" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>